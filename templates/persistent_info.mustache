{{!
    @template local_cltools/persistent_info


    Example context (json):
    {
        "usermodifiedfullname": "user full name",
        "timemodified": 1666676787,
        "timecreated":  1666676787
    }
}}
<div class="persistent-info">
    <div><span class="usermodified">{{#str}}usermodified, local_cltools{{/str}}: </span>{{usermodifiedfullname}}</div>
    <div><span class="timemodified">{{#str}}timemodified, local_cltools{{/str}}: </span>
        {{#userdate}} {{timemodified}}, {{#str}} strftimedate {{/str}} {{/userdate}}
    </div>
    <div><span class="timecreated">{{#str}}timecreated, local_cltools{{/str}}:</span>
        {{#userdate}} {{timecreated}}, {{#str}} strftimedate {{/str}} {{/userdate}}
    </div>
</div>