{{!
    @template local_cltools/dynamic_table_sql


    Example context (json):
    {
        "uniqid": "123234",
        "tableuniqueid": "tableuniqueid",
        "pagesize": "10",
        "filtersetjson": "[]",
        "sortdatajson": "[]",
        "handler": "entityclass",
        "handler": "{}",
        "iscrud": "false",
        "otheroptions": "{}",
        "editable": "true",
        "actionsdefs": "[]"
    }
}}
{{^error}}
<div id="table-{{uniqid}}"
     class="dynamic-table-sql"
     data-table-uniqueid='{{tableuniqueid}}'
     data-table-pagesize='{{pagesize}}'
     data-table-filters='{{filtersetjson}}'
     data-table-sort-data='{{sortdatajson}}'
     data-table-handler='{{handler}}'
     data-table-handler-params='{{handlerparams}}'
     data-table-iscrud='{{tableuniqueid}}'
     data-table-otheroptions='{{otheroptions}}'
     data-table-editable='{{editable}}'
     data-table-actions-defs='{{actionsdefs}}'
    >
</div>

{{#js}}
    require(['local_cltools/local/table/dynamic'], function(dynamic) {
        dynamic.init('table-{{uniqid}}');
    });
{{/js}}
{{/error}}
{{#error}}
    {{> core/notification_error}}
{{/error}}