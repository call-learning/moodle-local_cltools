{{!
    @template local_cltools/simple


    This is for behat test only and left as an example.

    Example context (json):
    {
        "starttime": 1666676787,
        "endtime": 1666676787,
        "mineval": 1,
        "title": "Title",
        "description": "Desc",
        "shortname": "Shortname",
        "image": "https://moodle.com"
    }
}}
<div>
    <h3>{{title}}</h3>
    <p>{{{description}}}</p>
    <p>{{{idnumber}}}</p>
    <p>{{{shortname}}}</p>
    <div class="image">{{{imageformatted}}}</div>
    <span class="starttime">{{#userdate}} {{starttime}}, {{#str}} strftimedate {{/str}} {{/userdate}}</span>
    <span class="endtime">{{#userdate}} {{endtime}}, {{#str}} strftimedate {{/str}} {{/userdate}}</span>
    <span class="mineval">{{mineval}}</span>
    {{>local_cltools/persistent_info}}
</div>